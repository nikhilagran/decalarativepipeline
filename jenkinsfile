pipeline {
    agent any

    tools {
        maven 'Maven'    // Adjust this to match the Maven name in Jenkins global tool config
        jdk 'JDK'        // Adjust this if needed
    }

    stages {
        stage('Clone Repository') {
            steps {
                git 'https://github.com/nikhilagran/decalarativepipeline.git'
            }
        }

        stage('Build') {
            steps {
                dir('myapp') {
                    bat 'mvn clean install'
                }
            }
        }

        stage('Test') {
            steps {
                dir('myapp') {
                    bat 'mvn test'
                }
            }
        }

        stage('Deploy') {
            steps {
                echo 'Deploying the application...'
            }
        }
    }

    post {
        always {
            echo 'Pipeline finished.'
        }
        success {
            echo 'Pipeline succeeded!'
        }
        failure {
            echo 'Pipeline failed!'
        }
    }
}
