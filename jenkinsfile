pipeline {
    agent any
tools {
    maven 'apache-maven-3.9.11' // Use the exact name you gave in Jenkins
}
    stages {
        stage('Clone Repository') {
            steps {
                git branch: 'main', url: 'https://github.com/nikhilagran/decalarativepipeline.git'
            }
        }
stage('Build') {
    steps {
        dir('myapp') {
            bat 'mvn clean install'
        }
    }
}
       stage('Test') {
    steps {
  dir('myapp') {
        bat 'mvn test'
    }
}
        }
       stage('Deploy') {
    steps {
        echo 'Deploying the application...'
        // bat 'actual-deploy-script.bat'   <-- Only if you have real deployment
    }
}
    post {
        success {
            echo 'Pipeline succeeded!'
        }
        failure {
            echo 'Pipeline failed.'
        }
    }
}
}
